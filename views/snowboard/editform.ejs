<!-- views/edit.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Snowboard</title>
</head>
<body>
  <h1>Edit Snowboard</h1>

  <form action="/snowboard/update/<%= snowboard._id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= snowboard.name %>" required><br>

    <label for="shape">Shape:</label>
    <input type="text" id="shape" name="shape" value="<%= snowboard.shape %>" required><br>

    <label for="profile">Profile:</label>
    <input type="text" id="profile" name="profile" value="<%= snowboard.profile %>" required><br>

    <label for="abilityLevel">Ability Level:</label>
    <input type="text" id="abilityLevel" name="abilityLevel" value="<%= snowboard.abilityLevel %>" required><br>

    <label for="review">Review:</label>
    <textarea id="review" name="review" required><%= snowboard.review %></textarea><br>

    <button type="submit">Update Snowboard</button>
  </form>

</body>
</html>
